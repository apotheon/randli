#!/usr/bin/env ruby
require 'yaml'

def display_img selection
  system "feh -B black -rz. #{selection}"
end

campaign = ARGV.pop

datafile = File.join ENV['HOME'], 'data/randscene', "#{campaign}.yaml"
lists = YAML.load_file datafile

list = (lists['images'] + lists['names']).flatten

n = rand list.size

if n < lists['images'].size
  display_img list[n]
else
  puts list[n]
end
